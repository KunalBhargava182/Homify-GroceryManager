<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/light_gray"
    app:strokeWidth="1dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Top row: name + options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Milk"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Reminder status (small) -->
            <ImageView
                android:id="@+id/ivReminderStatus"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="Reminder status"
                android:padding="2dp"
                android:src="@drawable/ic_notification_on"
                app:tint="@color/black" />

            <!-- More options -->
            <ImageView
                android:id="@+id/ivOptions"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:contentDescription="More options"
                android:padding="6dp"
                android:src="@drawable/ic_more_vert"
                app:tint="@color/black" />
        </LinearLayout>

        <!-- Second row: quantity -->
        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="2 Liters"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Bottom row: chips for expiry and expected finish -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="start|center_vertical"
            android:weightSum="2">

            <!-- Expiry chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipExpiry"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expires: 20 Oct 2025"
                android:textSize="13sp"
                android:checkable="false"
                app:chipIcon="@drawable/ic_calendar"
                app:chipIconTint="@color/black"
                app:chipBackgroundColor="@color/transparent_chip_background"
                app:closeIconVisible="false" />

            <!-- Spacer -->
            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <!-- Expected finish chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipExpectedFinish"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finishes in: 2d"
                android:textSize="13sp"
                android:checkable="false"
                app:chipIcon="@drawable/ic_timer"
                app:chipIconTint="@color/black"
                app:chipBackgroundColor="@color/transparent_chip_background"
                app:closeIconVisible="false" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
